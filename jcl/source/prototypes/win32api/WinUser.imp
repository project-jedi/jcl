
var
  _GetWindowLongPtr: Pointer;

function GetWindowLongPtr;
begin
  GetProcedureAddress(_GetWindowLongPtr, user32, 'GetWindowLong' + AWSuffix);
  asm
    mov esp, ebp
    pop ebp
    jmp [_GetWindowLongPtr]
  end;
end;

